                                <h5 class="card-title">@i.Product.Name</h5>
                                <p class="card-text mb-0"> @i.Product.Price</p>
                                <p class="text-muted">
                                    @i.Origin.OriginName
                                </p>
                                @if(i.Quantity > 0){
                                    <p>Còn hàng</p>
                                }else{
                                    <p class="text-bg-danger">Hết hàng</p>
                                }
                            </div>
                            <button type="button" class="btn btn-outline-primary m-3"><p class="d-none d-md-block mb-0">Add to Card <i class="bi bi-cart-plus-fill"></i></p></button>
                        </div>
